<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Producto Nuevo</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="tittle" class="form-control" placeholder="Título" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripción" ></textarea>
                </div>
                <div class="form-group">
                    <input type="number" name="quantity" class="form-control" placeholder="Cantidad">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Registrar
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>